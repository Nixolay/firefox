{
  "manifest_version": 2,
  "name": "Telegram in Sidebar",
  "version": "1.0",
  "description": "Telegram Web directly in Firefox sidebar",
  "browser_specific_settings": {
    "gecko": {
      "id": "*****************",
      "strict_min_version": "100.0"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://web.telegram.org/"
  ],
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "icons": {
    "32": "icon.svg"
  },
  "sidebar_action": {
    "default_panel": "panel.html",
    "default_icon": "icon.svg",
    "default_title": "✈️ Telegram"
  }
}