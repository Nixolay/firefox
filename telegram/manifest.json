{
  "browser_specific_settings": {
    "gecko": {
      "id": "telegram-sidebar@example.com",
      "strict_min_version": "100.0"
    }
  },
  "manifest_version": 2,
  "version": "1.0",
  "name": "Telegram Sidebar",
  "icons": {
    "32": "icon.svg"
  },
  "sidebar_action": {
    "default_panel": "panel.html",
    "default_title": "Telegram",
    "default_icon": "icon.svg"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://web.telegram.org/"
  ]
}